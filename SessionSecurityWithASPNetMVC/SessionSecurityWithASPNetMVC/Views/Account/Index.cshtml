
@{
    Layout = null;
}

@model SessionSecurityWithASPNetMVC.ViewModels.AccountViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @if (Model != null && Model.AccountModel != null)
        {
            <ul>
                @foreach (var account in Model.AccountModel.AccountList)
                {
                    <li>@account.Username +" " + @account.Password</li>
                }
            </ul>
        }

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {

            <table>
                <thead>
                    <tr>
                        <td colspan="2">
                            <strong>Login</strong>
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.Account.Username)
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.Account.Username)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.Account.Password)
                        </td>
                        <td>
                            @Html.PasswordFor(model => model.Account.Password)
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <input type="submit" name="submit" value="Login" />
                        </td>
                    </tr>

                    <tr>
                        <td colspan="2">
                            <div>
                                @ViewBag.LoginError
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>

        }
    </div>
</body>
</html>
